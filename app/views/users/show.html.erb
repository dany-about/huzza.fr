<div class="flex-grid">

  <div class="row bg-gradient-success" style="justify-content: center">

    <div class="col-3" style="padding-right: 7px; margin-top: 30px;">
      <%= render 'users/badges' %>
    </div>

    <div class="col-5" style="padding-left: 7px; padding-right: 7px; margin-top: 30px">
      <%= render 'users/profile' %>
    </div>

    <div class="col-3 userInfoElement_<%= @user.id %>" style="padding-left: 7px; margin-top: 30px;">
      <%= render 'users/information', user: @user %>
    </div>

  </div>

  <div class="main-content">
    <!-- Header (account) -->
    <section class="header-account-page d-flex align-items-end bg-gradient-success" style="height: 10px" data-offset-top="#header-main">
      <!-- Header container -->
      <div class="container pt-4 pt-lg-0">
        <div class="row">
          <div class=" col-lg-12" style="margin-left: -50px">
            <!-- Account navigation -->
            <div class="d-flex">
              <a href="account-profile-public.html" class="btn btn-icon btn-group-nav shadow btn-neutral">
                <span class="btn-inner--icon"><i class="fas fa-user-astronaut"></i></span>
                <span class="btn-inner--text d-none d-md-inline-block">Intergalactic Dares</span>
              </a>
            </div>
          </div>
        </div>
      </div>
    </section>
    <section class="slice">
        <div class="container">
          <div class="row row-grid">
            <div class="col-lg-9 order-lg-2">
              <% if @user == current_user %>
                <div class="card bg-gradient-success hover-shadow-lg mb-8">
                  <%= render 'users/banner', user: @user %>
                </div>
              <% end %>
              <div style="margin-top: -50px" id="userPageShow">
                <%= render 'users/participations', user: @user, status: "ongoing" %>
              </div>
            </div>
            <div class="col-lg-3 order-lg-1" style="margin-left: -50px">
              <div data-toggle="sticky" data-sticky-offset="30" data-negative-margin=".card-profile-cover">
                <div class="card">
                  <div class="list-group list-group-sm list-group-flush">
                    <%= link_to user_path(@user.id, show: "users/participations", status: "ongoing"), class:"list-group-item list-group-item-action d-flex justify-content-between", remote: true do %>
                      <div>
                        <i class="fas fa-user-ninja mr-2"></i>
                        <span>Ongoing</span>
                      </div>
                      <div>
                        <i class="fas fa-angle-right"></i>
                      </div>
                    <% end %>
                    <%= link_to user_path(@user.id, show: "users/participations", status: "achieved"), class:"list-group-item list-group-item-action d-flex justify-content-between", remote: true do %>
                      <div>
                        <i class="fas fa-user-injured mr-2"></i>
                        <span>Succeeded</span>
                      </div>
                      <div>
                        <i class="fas fa-angle-right"></i>
                      </div>
                    <% end %>
                    <%= link_to user_path(@user.id, show: "users/dares", status: "created"), class:"list-group-item list-group-item-action d-flex justify-content-between", remote: true do %>
                      <div>
                        <i class="fas fa-user-friends mr-2"></i>
                        <span>Created Dares</span>
                      </div>
                      <div>
                        <i class="fas fa-angle-right"></i>
                      </div>
                    <% end %>
                    <%= link_to user_path(@user.id, show: "users/dares", status: "starred"), class:"list-group-item list-group-item-action d-flex justify-content-between", remote: true do %>
                      <div>
                        <i class="fas fa-sort-numeric-up mr-2"></i>
                        <span>Starred Dares</span>
                      </div>
                      <div>
                        <i class="fas fa-angle-right"></i>
                      </div>
                    <% end %>
                    <%= link_to user_path(@user.id, show: "users/statistics"), class:"list-group-item list-group-item-action d-flex justify-content-between", remote: true do %>
                      <div>
                        <i class="fas fa-sort-numeric-up mr-2"></i>
                        <span>Account Metrics  </span><span class="badge badge-pill badge-soft-warning badge-floating border-">Soon</span>
                      </div>
                      <div>
                        <i class="fas fa-angle-right"></i>
                      </div>
                    <% end %>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
    </section>
  </div>
</div>