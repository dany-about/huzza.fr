<div class="flex-grid">

  <div class="row bg-gradient-danger" style="justify-content: center">

    <div class="col-3" style="padding-right: 7px; margin-top: 14px;">
      <%= render 'users/badges' %>
    </div>

    <div class="col-5" style="padding-left: 7px; padding-right: 7px; margin-top: 14px">
      <%= render 'users/profile' %>
    </div>

    <div class="col-3 userInfoElement_<%= @user.id %>" style="padding-left: 7px; margin-top: 14px;">
      <%= render 'users/information', user: @user %>
    </div>

  </div>

  <div class="main-content">
    <!-- Header (account) -->
    <section class="header-account-page d-flex align-items-end bg-gradient-danger" style="height: 10px" data-offset-top="#header-main">
      <!-- Header container -->
      <div class="container pt-4 pt-lg-0">
        <div class="row">
          <div class=" col-lg-12">
            <!-- Account navigation -->
            <div class="d-flex">
              <a href="account-profile-public.html" class="btn btn-icon btn-group-nav shadow btn-neutral">
                <span class="btn-inner--icon"><i class="fas fa-user-astronaut"></i></span>
                <span class="btn-inner--text d-none d-md-inline-block">Intergalactic Dares</span>
              </a>
            </div>
          </div>
        </div>
      </div>
    </section>
    <section class="slice">
        <div class="container">
          <div class="row row-grid">
            <div class="col-lg-9 order-lg-2" id="userPageShow">
              <%= render 'users/participations', user: @user %>
            </div>
            <div class="col-lg-3 order-lg-1">
              <div data-toggle="sticky" data-sticky-offset="30" data-negative-margin=".card-profile-cover">
                <div class="card">
                  <div class="list-group list-group-sm list-group-flush">
                    <%= link_to user_path(@user.id, show: "users/participations"), class:"list-group-item list-group-item-action d-flex justify-content-between", remote: true do %>
                      <div>
                        <i class="fas fa-user-ninja mr-2"></i>
                        <span>Participations</span>
                      </div>
                      <div>
                        <i class="fas fa-angle-right"></i>
                      </div>
                    <% end %>
                    <%= link_to user_path(@user.id, show: "users/dares"), class:"list-group-item list-group-item-action d-flex justify-content-between", remote: true do %>
                      <div>
                        <i class="fas fa-user-injured mr-2"></i>
                        <span>Dares</span>
                      </div>
                      <div>
                        <i class="fas fa-angle-right"></i>
                      </div>
                    <% end %>
                    <%= link_to user_path(@user.id, show: "users/friends"), class:"list-group-item list-group-item-action d-flex justify-content-between", remote: true do %>
                      <div>
                        <i class="fas fa-user-friends mr-2"></i>
                        <span>Friends</span>
                      </div>
                      <div>
                        <i class="fas fa-angle-right"></i>
                      </div>
                    <% end %>
                    <%= link_to user_path(@user.id, show: "users/statistics"), class:"list-group-item list-group-item-action d-flex justify-content-between", remote: true do %>
                      <div>
                        <i class="fas fa-sort-numeric-up mr-2"></i>
                        <span>Account Metrics</span>
                      </div>
                      <div>
                        <i class="fas fa-angle-right"></i>
                      </div>
                    <% end %>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
    </section>
  </div>
</div>