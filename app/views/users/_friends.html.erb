<!-- On itère sur tes potes d'abord, puis les gens que tu follow mais qui ne te followent pas (possibilité de filter à implémenter) -->
<% user_list = user.friends + (user.followed_users - user.friends) %>

<% user_list.each do |followed| %>

  <%= followed.avatar %>
  <%= followed.full_name %>
  <%= followed.rank %>
  <%= followed.badge[:title] %>
  <%= followed.badge[:emote] %>

  <%= followed.friends.count %>
  <%= followed.followers.count %>
  <%= followed.participations.count %>
  <%= followed.achieved_participations.count %>
  <%= followed.created_dares.count %>

  <!-- On rajoute une petite mention pour différencier tes potes des autres -->
  <% if followed.friends.include?(user) %>
    Lui c'est mon pote
  <% end %>

<% end %>