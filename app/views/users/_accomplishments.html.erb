<div class="card border-0 hover-shadow-lg" style="height: 300px; overflow: scroll">
  <div class="card-body p-3 pt-0 text-center">
    <div>
      <% a = ["primary", "warning", "success", "danger", "secondary", "info"]; colors = a+a+a+a+a+a+a %>
      <% user.accomplishments.each_with_index do |accomplishment, i| %>
        <span class="badge badge-<%= colors[i] %> badge-pill">
          <i class="<%= accomplishment.icon_class %>"></i><%= accomplishment.title %>
        </span>
      <% end %>
    </div>

    <div>
      <% if user.accomplishments.count >= 5 %>
        <div class="icon icon-warning rounded-circle icon-shape icon-sm hover-rotate-360">
          <i class="fas fa-medal"></i>
        </div>
        <% if user.accomplishments.count >= 10 %>
          <div class="icon icon-success icon-shape icon-sm hover-rotate-360">
            <i class="fas fa-trophy"></i>
          </div>
        <% end %>
      <% end %>
    </div>
  </div>
</div>