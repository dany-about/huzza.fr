
<div class="card border-0 hover-shadow-lg"  style="height: 300px">

  <%if user.avatar.attached?%>
    <%= image_tag(user.avatar, alt: 'avatar', class: "avatar rounded-circle avatar-lg shadow hover-shadow-lg mx-auto mt-2", style: "margin-bottom: -10px") %>
  <%elsif user == current_user %>
    <%= form_tag user_avatars_path(@user), multipart: true do %>
      <div class="col-md-12 text-center" style="margin-bottom: -20px">
          <div class="row mx-auto" style="justify-content: center">
            <div class="image-upload mt-2">
              <label for="avatar">
                <div class="avatar-parent-child">
                  <a href="#" class="avatar rounded-circle avatar-lg shadow hover-shadow-lg mx-auto mt-1">
                    <img alt="Image placeholder" src="https://image.noelshack.com/fichiers/2019/14/2/1554196194-pp.jpg">
                  </a>
                  <img alt="Image placeholder" src="https://image.noelshack.com/fichiers/2019/14/2/1554196560-plusorange.jpg" class="avatar-child">
                </div>
              </label>
              <input class="profile_input" id="avatar" name="avatar" type="file" />
            </div>
            <div class="my-auto ml-2">
              <%= submit_tag "Upload", class: "btn btn-sm btn-outline-danger btn-sm" %>
            </div>
          </div>
      </div>
    <% end %>
  <% else %>
    <img alt="Image placeholder" src="https://image.noelshack.com/fichiers/2019/14/2/1554196194-pp.jpg" class="avatar rounded-circle avatar-lg shadow hover-shadow-lg mx-auto mt-1">
  <% end %>

  <div class="card-body p-3 pt-0 text-center">
    <h1 class="mb-0 animated zoomIn delay-0s"><%= user.full_name %></h1>
    <span class="d-block text-muted mb-3 animated zoomIn delay-0s"><%= user.badge[:title] %></span>

    <hr class="divider divider-fade" style="margin-top: -10px" />

    <div class="row" style="justify-content: center; margin-top: -20px">
      <h5 class="mb-0">Niveau <%= user.rank %> | <div class="<%= user.badge[:animation] %>"><%= user.badge[:emote] %></div></h5>
    </div>
    <div class="spinner-border spinner-border-sm text-warning" role="status"></div>
     

    <%= user.percent_to_next_lvl %>% jusqu'au rang suivant
    <div class="progress" style="margin-top: 8px; margin-bottom: 5px; height: 18px">
      <div class="progress-bar progress-bar-striped bg-warning" role="progressbar" style="width: <%= user.percent_to_next_lvl %>%" aria-valuenow="" aria-valuemin="0" aria-valuemax="100"></div>
    </div>
  </div>

</div>