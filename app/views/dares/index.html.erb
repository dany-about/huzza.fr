<!-- Navigation Bloc -->
<div class="col-lg-12">

  <div class="row mt-5">
    <div class="col-1"></div>
    <% Category.all.each do |category| %>
      <div class="col-1 text-center">
        <div class="card bg-dark opacity-container text-white overflow-hidden shadow border-0" style="width: 100px; height: 60px">
          <%= link_to dares_path(category_id: category), remote: true do %>
            <div class="card-img-bg" style="background-image: url('<%= category.image_url %>');"></div>
            <span class="mask bg-gradient-secondary opacity-3 hover-opacity-0"></span>
          <% end %>
        </div>
        <h6><%= category.name %></h6>
      </div>
    <% end %>
  </div>

  <hr class="divider divider-fade"/>

  <div class="row row-grid mx-auto" style="margin-top: -30px" id="explorerIndex">
    <%= render "dares/dares", category: "all" %>
  </div>

</div>
