<div class="card-body">
  <div class="row row-grid mx-auto my-auto">
    <div class="col-lg-12">
      <div class="card-header">
        <div class="d-flex justify-content-between align-items-center">
          <div>
            <h6 class="mb-0">Latest comments</h6>
          </div>
          <div class="text-right">
            <div class="actions">
              <a href="#" class="action-item"><i class="fas fa-sync-alt"></i></a>
            </div>
          </div>
        </div>
      </div>

      <div class="list-group list-group-flush">
        <% type.constantize.find(commentable_id).comments.each do |comment| %>
          <div class="list-group-item list-group-item-action">
            <div class="d-flex align-items-center" data-toggle="tooltip" data-placement="right" data-title="2 hrs ago">
              <div>
                <img alt="Image placeholder" src="http://sunrift.com/wp-content/uploads/2014/12/Blake-profile-photo-square.jpg" class="avatar rounded-circle avatar-sm shadow hover-shadow-lg">
              </div>
              <div class="flex-fill ml-3">
                <div class="h6 text-sm mb-0"><%= comment.user.full_name %><small class="float-right text-muted"><%= time_ago_in_words(comment.created_at) %> ago</small></div>
                <p class="text-sm lh-140 mb-0">
                  <%= comment.content %>
                </p>
              </div>
              <div class="text-right">
                <div class="actions">
                  <% if comment.user == current_user %>
                    <%= link_to comment_path(comment, commentable_id: commentable_id, type: type), class: "action-item", method: "DELETE", remote: true do %>
                      <i class="far fa-trash-alt"></i>
                    <% end %>
                  <% end %>
                </div>
              </div>
            </div>
          </div>
        <% end %>
      </div>
      <div class="card-footer">
        <div class="row align-items-center">
          <div class="col-8 col-md-12 d-flex align-items-center">
            <div class="pr-3">

              <img alt="Image placeholder" src="https://image.noelshack.com/fichiers/2019/11/2/1552390314-team-2-800x800.jpg" class="avatar  rounded-circle avatar-sm">

            </div>
            <%= form_with url: comments_path(commentable_id: commentable_id, type: type) do |f| %>
            <%= f.text_field :content, placeholder:"Add a comment...", rows:"1", class:"form-control", toggle:"autosize", maxlength:"140" %>
            <div class="col-4 col-md-3 text-right">
              <%= f.submit "Post Comment", class:"btn btn-sm btn-outline-success", type:"submit" %>
            </div>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
