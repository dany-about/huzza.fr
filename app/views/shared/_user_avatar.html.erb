<%= link_to user_path(user) do %>
  <%if user.avatar.attached?%>
    <%= image_tag(user.avatar, alt: 'avatar', :class => "avatar rounded-circle avatar-lg shadow hover-shadow-lg mx-auto") %>
  <%else%>
  <img alt="Image placeholder" src="https://image.noelshack.com/fichiers/2019/12/4/1553168518-pngpic.png" class="avatar rounded-circle avatar-sm shadow hover-shadow-sm" style="margin-left:-0.5rem;margin-top:0rem">
  <% end %>
<% end %>    
