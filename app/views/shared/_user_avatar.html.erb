<%= link_to user_path(user) do %>
  <%if user.avatar.attached?%>
    <%= image_tag(user.avatar, alt: 'avatar', :class => "avatar rounded-circle avatar-lg shadow hover-shadow-lg mx-auto") %>
  <%else%>
  <img alt="Image placeholder" src="http://chittagongit.com//images/no-profile-picture-icon/no-profile-picture-icon-15.jpg" class="avatar rounded-circle avatar-lg shadow hover-shadow-lg" style="margin-left:-0.5rem;margin-top:-1rem">
  <% end %>
<% end %>    
