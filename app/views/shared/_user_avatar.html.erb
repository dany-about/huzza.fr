<%= link_to user_path(user) do %>
  <%if user.avatar.attached?%>
    <%= image_tag(user.avatar, alt: 'avatar', :class => "avatar rounded-circle avatar-sm shadow hover-shadow-sm") %>
  <%else%>
  <img alt="Image placeholder" src="https://image.noelshack.com/fichiers/2019/12/4/1553168518-pngpic.png" class="avatar rounded-circle avatar-sm shadow hover-shadow-sm">
  <% end %>
<% end %>