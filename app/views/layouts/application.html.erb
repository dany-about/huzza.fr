<!DOCTYPE html>
<html>
  <head>
    <title>Huzza</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>

    <%= render 'layouts/flash'%>
    <% if user_signed_in? %>
      <%= render 'layouts/header' %>
    <% end %>
      <%= yield %>
    
    <footer>
      <%= render 'layouts/footer' %>
    </footer>

  </body>

</html>